# Environment variables for the CompanioNation API
# Copy this file to .env and adjust values as needed for local development

# Database connection string (required)
COMPANIONATION_DATABASE=Server=(localdb)\MSSqlLocalDB;Database=CompanioNationDB;Trusted_Connection=True;TrustServerCertificate=True;

# Azure storage settings (optional – local development uses Azurite if enabled)
AZURE_STORAGE_CONNECTION_STRING=UseDevelopmentStorage=true
AZURE_STORAGE_CONTAINER_NAME=companionation-dev

# Azure Base URL where photos are served from
COMPANIONATION_PHOTO_BASE_URL=http://localhost:10000/devstoreaccount1/companionation-dev/

# Google OAuth settings (optional – required only if enabling Google sign-in)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Web Push Notifications - VAPID Private Key (Public key is in CompanioNation.Shared)
VAPID_PRIVATE_KEY=
